# ~/.config/dunst/dunstrc
# Waybar “IRON + 3D” — cooler card style (compat-safe), top-right

[global]
monitor = 0
follow = keyboard

### Position
origin = bottom-left
offset = 16x16
geometry = "360x8-16+16"
notification_limit = 6

### Typography / layout
font = GohuFont 14 Nerd Font 10
markup = full

# Title looks like a header bar, body is softer
# (markup tags are supported in most dunst builds)
format = "<span foreground='#DADADA'><b>%s</b></span>\n<span foreground='#F0F0F0'>%b</span>"

alignment = left
word_wrap = yes
ignore_newline = no
line_height = 0

# “Card” spacing
padding = 10
horizontal_padding = 14
text_icon_padding = 12
separator_height = 2
separator_color = frame

# Frame
frame_width = 2
# Base “panel” background like your Waybar modules
background = "#3F4042"
foreground = "#F0F0F0"
frame_color = "#DADADA"

### Icons
icon_position = left
max_icon_size = 52

### Behaviour
sort = yes
stack_duplicates = true
hide_duplicate_count = false
show_indicators = yes
indicate_hidden = yes
history_length = 50

### Timeouts
timeout = 4

mouse_left_click = do_action, close_current
mouse_middle_click = close_all
mouse_right_click = close_current

# =========================
# URGENCY STYLES
# =========================
[urgency_low]
background = "#3F4042"
foreground = "#F0F0F0"
frame_color = "#9A9A9A"
timeout = 4

[urgency_normal]
background = "#3F4042"
foreground = "#F0F0F0"
frame_color = "#DADADA"
timeout = 4

[urgency_critical]
# red-ish frame like your error color, still the same “card”
background = "#3F4042"
foreground = "#F0F0F0"
frame_color = "#FFB4AB"
timeout = 0

